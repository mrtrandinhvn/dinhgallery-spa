{
    "extends": [
        "react-app"
    ],
    "rules": {
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "semi": "error",
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.ts?(x)"
            ],
            "rules": {
                "indent": [
                    "error",
                    4,
                    {
                        "SwitchCase": 1
                    }
                ]
            }
        }
    ]
}